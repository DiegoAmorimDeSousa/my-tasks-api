{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./", // CORRIGIDO AQUI: Base URL deve ser a raiz do projeto
    "paths": {
      "@domain/*": ["src/domain/*"], // CORRIGIDO AQUI: Caminhos s√£o relativos ao baseUrl (raiz do projeto, apontando para src)
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}