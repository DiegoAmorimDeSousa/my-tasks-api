{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", // ALTERADO AQUI: De "./src" para "." (raiz do projeto)
    "paths": {
      "@domain/*": ["./src/domain/*"], // ALTERADO AQUI: Adicionado "./src/"
      "@application/*": ["./src/application/*"], // ALTERADO AQUI: Adicionado "./src/"
      "@infrastructure/*": ["./src/infrastructure/*"], // ALTERADO AQUI: Adicionado "./src/"
      "@config/*": ["./src/config/*"] // ALTERADO AQUI: Adicionado "./src/"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}