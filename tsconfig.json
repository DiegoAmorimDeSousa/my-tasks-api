{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src", // rootDir deve ser a raiz dos seus arquivos fonte
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "baseUrl": "./dist", // CORRIGIDO AQUI: Base URL agora aponta para o diretório de saída
    "paths": {
      // CORRIGIDO AQUI: Caminhos agora são relativos ao novo baseUrl (dist)
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}