{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // CORRIGIDO AQUI: Base URL deve ser o diretório raiz dos seus fontes
    "paths": {
      "@domain/*": ["domain/*"], // CORRIGIDO AQUI: Caminhos são relativos ao baseUrl (src)
      "@application/*": ["application/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}